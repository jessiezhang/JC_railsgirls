<div class="row">
  <div class="col-md-9">
    <%= image_tag @idea.picture_url, width: '100%' if @idea.picture.present? %>
    <h1>Comments</h1>
    <% @idea.comments.each do |comment| %>
    <div>
      <%= comment.user_name %>
      <%= comment.body%>
      <%=link_to 'Delete', comment, method: :delete, data: {confirm: 'Are you sure to delete this comment?'}%>
    </div>
    <% end %>
    <%= render 'comments/form'%>
  </div>
  <div class="clo-md-3">
    <p><b>Name: </b><%= @idea.name%></p>
    <p><b>Description</b><%= @idea.description%></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea)%>
      <%= link_to 'Destroy', @idea, data: {confirm: 'Are you sure to destroy it?'}, method: :delete %>
      <%= link_to 'Back', ideas_path%>
    </p>
  </div>
</div>
