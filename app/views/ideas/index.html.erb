<h1>Listing Ideas</h1>
<% @ideas.in_groups_of(2) do |group| %>
  <div class="row">
    <% group.compact.each do |idea|%>
    <div class="col-md-4">
    <!-- <%= image_tag idea.picture_url(:thumb), :width => 300 if idea.picture? %> -->
    <%= image_tag idea.picture_url if idea.picture? %>
    <h4><%= link_to idea.name, idea %></h4>
    <%= idea.description%>
    </div>
    <% end %>
  </div>
<% end %>
